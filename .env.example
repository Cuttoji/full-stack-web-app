# Database
DATABASE_URL="postgresql://username:password@localhost:5432/task_management?schema=public"

# JWT (REQUIRED - Generate a secure random string for production)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"

# Mock Database Mode (set to "true" to use in-memory mock data instead of real DB)
USE_MOCK_DB="false"

# Docker Compose - PostgreSQL
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your-secure-postgres-password"
POSTGRES_DB="task_management"
POSTGRES_PORT="5432"

# Docker Compose - pgAdmin
PGADMIN_EMAIL="admin@example.com"
PGADMIN_PASSWORD="your-secure-pgadmin-password"
PGADMIN_PORT="5050"

# Optional: File Upload (if using cloud storage)
# CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""

# ============================================
# WEBHOOK & NOTIFICATION INTEGRATIONS
# ============================================

# Webhook URLs (Power Automate, Make, Zapier, n8n, etc.)
# WEBHOOK_LEAVE_URL="https://prod-xx.westus.logic.azure.com/workflows/..."
# WEBHOOK_TASK_URL=""

# LINE Notify (ง่ายที่สุด - แจ้งเตือนไปกลุ่ม)
# สร้าง token ได้ที่: https://notify-bot.line.me/
# LINE_NOTIFY_TOKEN=""

# LINE Messaging API (Push message รายบุคคล)
# สร้าง channel ได้ที่: https://developers.line.biz/
# LINE_CHANNEL_ACCESS_TOKEN=""

# Alternative: Direct SMTP Configuration (for Outlook/Office 365)
# SMTP_HOST="smtp.office365.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@company.com"
# SMTP_PASS="your-app-password"
# EMAIL_FROM_NAME="Task Management System"
