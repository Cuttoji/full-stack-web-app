# Database
DATABASE_URL="postgresql://username:password@localhost:5432/task_management?schema=public"

# JWT (REQUIRED - Generate a secure random string for production)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"

# Mock Database Mode (set to "true" to use in-memory mock data instead of real DB)
USE_MOCK_DB="false"

# Docker Compose - PostgreSQL
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your-secure-postgres-password"
POSTGRES_DB="task_management"
POSTGRES_PORT="5432"

# Docker Compose - pgAdmin
PGADMIN_EMAIL="admin@example.com"
PGADMIN_PASSWORD="your-secure-pgadmin-password"
PGADMIN_PORT="5050"

# Optional: File Upload (if using cloud storage)
# CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""
